<section>
  <div class="container">
    <div class="row mb-5">
      <a href="/admin/add-product" class="btn btn-success ml-auto" style="border-radius:30px;">Add Product </a>
    </div>
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Rating</th>
          <th scope="col">Description</th>
          <th>Images</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Rating}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn"
              style="background-color: rgb(99, 23, 170); color:#ffff;border-radius:30px;">Edit</a></td>
          <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" style="border-radius:30px;"
              onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a></td>

        </tr>
        {{/each}}


      </tbody>
    </table>
  </div>
</section>
<script>
  $(function () {
    $('#productsTable').DataTable();
  });
</script>