<section class="mt-5 pt-5 mb-5 pb-5">
    <div class="container mb-5 pb-5">
        <table class="table mt-5 mb-5 pb-5 table-responsive">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                    <tr>

                        <td style="font-weight: 300;">{{this.date}}</td>
                        <td style="font-weight: 200;">{{this.deliveryDetails.address}}</td>
                        <td style="font-weight: 200;">{{this.deliveryDetails.pincode}}</td>
                        <td style="font-weight: 200;">{{this.deliveryDetails.mobile}}</td>
                        <td style="font-weight: 200;">{{this.getTotalAmount}}</td>
                        <td style="font-weight: 200;">{{this.paymentMethod}}</td>
                        <td style="font-weight: 200;">{{this.status}}</td>

                        <td>
                            <a href="/view-order-products/{{this._id}}" class="btn " style="border-radius:20px; background-color: rgb(99, 23, 170); color:#ffff; font-size:smaller; font-weight:200;" >View Products</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>