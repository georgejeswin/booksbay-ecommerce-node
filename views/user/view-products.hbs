      {{#each products}}
      <div class="col-md-3 pb-4 product-item-container">
        <div class="card pt-2 px-2 ml-auto mr-auto" style="width: 16rem; height:35rem; border-radius:10px;">
          <a href="/view-single-product/{{this._id}}"><img src="/product-images/{{this._id}}.jpg" width="5rem"
              class="card-img-top" alt="Card image cap" style="height: 20rem; "></a>
